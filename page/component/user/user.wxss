/* page/component/user/user.wxss */
@import '../../common/common.wxss';

.list{
  background-color: #fff;
  position: relative;
  margin-top: 20rpx;
}

.list .item{
  position: relative;
  height: 100rpx;
  padding: 0rpx 24rpx;
}

.list .item:active{
  background-color: #efefef;
}

.list .item .label{
  line-height: 100rpx;
}

.list .item .value{
  line-height: 100rpx;
  color: #999;
  text-align: right;
  font-size: 28rpx;
}

.list .item .icon{
  max-width: 72rpx;
  min-width: 72rpx;
  height: 72rpx;
  margin-top: 14rpx;
  border-radius: 50%;
  overflow:hidden; 
}

.list .item .icon image{
  width: 100%;
  height: 100%;
}