/* page/component/balance-roll/balance-roll.wxss */
@import '../../common/common.wxss';
@import '../index.wxss';

.tab{
  height: 88rpx;
  background-color: #fff;
}

.tab .flex-row{
  line-height: 88rpx;
  text-align: center;
}

.tab .flex-row.active{
  color: #05C0AB;
  border-bottom: 2px solid #05C0AB;
}

.money{
  height: 100rpx;
  background-color: #fff;
  margin-top: 20rpx;
  padding: 0 24rpx;
}

.money .title{
  max-width: 80rpx;
  min-width: 80rpx;
  line-height: 100rpx;
  font-size: 28rpx;
}

.money .input input{
  height: 100rpx;
  text-align: right;
  width: 96%;
  font-size: 28rpx;
}

.label{
  padding:24rpx 24rpx 40rpx 24rpx; 
  font-size: 28rpx;
}

.label .lf text{
  color: #fe9900;
}

.label .rg{
  color: #05C0AB;
  text-align: right;
}

.btns{
  padding: 0 24rpx;
}

.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

.commodity_attr_box {
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  padding: 20rpx;
}

.form-group {
    position: relative;
    height: 100rpx;
}

.form-group input{
  width: 100%;
}

.form-group .btns{
  max-width: 200rpx;
  min-width: 200rpx;
  text-align: right;
}

.form-group input{
  height: 100rpx;
}

.btn-reg {
  margin: 60rpx 80rpx 0 40rpx;
  border-radius: 4px;
}
.btn-reg button:last-child{
  margin-top: 20rpx;
}