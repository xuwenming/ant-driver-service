/* page/component/order-list/order-list.wxss */
@import '../../common/common.wxss';

.tab {
    position: fixed;
    left: 0;
    width: 100%;
    height: 84rpx;
    background-color: #fff;
    z-index: 99;
    box-shadow: 0 0 10px #ccc;
    display: -webkit-box !important;
}

.tab .flex-row .title{
    display: block;
    width: 100%;
    height: 42px;
    margin: auto;
    font-size: 16px;
    color: #333;
    display: -webkit-box !important;
    -webkit-box-align: center;
    -webkit-box-pack: center;
}

.tab .flex-row .title.active{
    border-bottom: 2px solid #05C0AB;
    color: #05C0AB !important;
}

.order-list{
  position: relative;
  padding-top: 100rpx;
}

.order-list .order-item{
  position: relative;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.order-list .order-item .top{
  padding: 20rpx 24rpx; 
  position: relative;
  color: #999;
}

.order-list .order-item .top .icon{
  position: relative;
  width: 166rpx;
  height: 48rpx;
}

.order-list .order-item .top .icon image{
  display: block;
  width: 100%;
  height: 100%; 
}

.order-list .order-item .top .icon view{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 2;
  height: 48rpx;
  line-height: 48rpx;
  padding-left: 20rpx;
  font-size: 26rpx;
  color: #fff;
}

.order-list .order-item .top .label{
  font-size: 24rpx;
}

.order-list .order-item .top .label text{
  display: block;
  width: 80px;
  margin-left: 10rpx;
}

.order-list .order-item .info{
  position: relative;
  padding: 20rpx 24rpx;
}

.order-list .order-item .info .icon{
  max-width: 32rpx;
  min-width: 32rpx;
}

.order-list .order-item .info .icon image{
  width: 32rpx;
  height: 32rpx;
}

.order-list .order-item .info .rg{
  padding-left: 20rpx;
}

.order-list .order-item .info .rg .header{
  color: #333;
}

.order-list .order-item .info .rg .header .flex-row{
  height: 32rpx;
  line-height:32rpx; 
}

.order-list .order-item .info .rg .header .flex-row:first-child{
  max-width: 140rpx;
  min-width: 140rpx;
  height: 32rpx;
  line-height:32rpx; 
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.order-list .order-item .info .rg .header .flex-row:last-child{
  color: #05C0AB;
  text-align: right;
}

.order-list .order-item .info .rg .address{
  color: #666;
  font-size: 26rpx;
  padding-top: 10rpx;
}

.order-list .order-goods{
  position: relative;
  padding: 20rpx 24rpx;
}

.order-list .order-goods .left{
  max-width: 160rpx;
  min-width: 160rpx;
  /* border: 1px solid #eee; */
}

.order-list .order-goods .left image{
  width: 160rpx;
  height: 160rpx;
}

.order-list .order-goods .right{
  margin-left: 20rpx;
  height: 160rpx;
  position: relative;
  padding-top: 10rpx;
}

.order-list .order-goods .right .name{
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 40rpx;
  max-height: 80rpx;
  font-size: 28rpx;
}

.order-list .order-goods .right .bottom{
  position: absolute;
  left: 0;
  bottom: 10rpx;
  width: 100%;
  height: 32rpx;
  line-height: 32rpx;
  color: #999;
  font-size: 24rpx;
}

.order-list .order-goods .right .bottom .rg{
  text-align: right;
}

.order-list .bottoms{
  padding-bottom: 20rpx;
  text-align: right;
  padding-right: 24rpx;
}

.order-list .bottoms button{
  display:inline-block; 
  font-size: 28rpx;
  width: 180rpx;
  border-style: none;
}

.order-list .bottoms button::after{
  border: 1px solid #fe9900;
}

.order-list .bottoms button:first-child{
  color: #fe9900;
}

.order-list .bottoms button:last-child{
  background-color: #fe9900;
  color: #fff;
  margin-left: 20rpx;
}

.order-list .bottoms .carry{
  padding: 20rpx 0rpx;
  font-size: 28rpx;
}

.order-list .bottoms .carry text{
  color: #05C0AB;
  font-size: 36rpx;
}