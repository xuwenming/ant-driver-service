/* page/component/shop-manage/shop-manage.wxss */
@import '../../common/common.wxss';

.header{
  position: relative;
  margin-bottom: 10px
}

.header .header-bar{
  height: 160rpx;
  background-color: #05C0AB;
}

.header .header-bar .online{
   position: absolute;
   right: 20rpx;
   top: 84rpx;
}

.header .header-bottom{
  position: relative;
  height: 180rpx;
  padding: 0 40rpx;
  background-color: #fff;
}

.header .header-bottom .left{
  padding-top: 36rpx;
  max-width: 200rpx;
  min-width: 200rpx;
}

.header .header-bottom .left .h3{
  font-size: 48rpx;
  color: #333;
  text-align: center
}

.header .header-bottom .left .p{
  text-align:center;
  font-size: 28rpx;
  color: #999;
}

.header .header-bottom .center{
  position: relative;
}

.header .header-bottom .center .top{
  width: 160rpx;
  height: 160rpx;
  margin: -80rpx auto 0rpx auto;
  border-radius: 50%;
  overflow:hidden; 
}

.header .header-bottom .center .top image{
  width: 100%;
  height: 100%
}

.header .header-bottom .center .name{
  text-align: center;
  margin-top: 10rpx;
  font-size: 26rpx;
  line-height: 32rpx;
  max-height: 64rpx;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  height: 64rpx;
  padding : 0 20rpx;
  word-break: break-all;
}

.box{
  position: relative;
  border-top:1px solid #D9D9D9; 
  background-color: #fff;
}

.box:last-child{
  border-bottom:1px solid #D9D9D9; 
}

.box .flex-row{
  max-width: 33.33vw;
  min-width: 33.33vw;
  height: 26vw;
  padding-top: 6vw;
  overflow: hidden;
}

.box .flex-row:first-child{
  border-right:1px solid #D9D9D9;  
}

.box .flex-row:last-child{
  border-left:1px solid #D9D9D9;  
}

.box .flex-row .icon{
  width: 12vw;
  height: 12vw;
  margin: auto;
}

.box .flex-row .icon image{
  width: 100%;
  height: 100%;
}

.box .flex-row .label{
  text-align: center;
  padding-top: 10rpx;
  color: #666;
  font-size: 28rpx;
}